@model ExerciseProgram.Models.ViewModels.ProgramViewModel

<script>
    $(document).ready(function () {


    });
</script>


@if (ViewBag.Saved == "Saved")
{
    <div class="container">
        <div class="row margin-top-10px">
            <div class="col-sm-12">
                <div id="divSuccess" class="alert alert-success" role="alert">
                    Saved
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
        </div>
        }


        <div class="container">
            <div class="container border background-white margin-top-10px">
                <div class="row margin-top-10px">
                    <div class="col-sm-12">

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <form id="myForm">
                                <h4>Program Details</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="col-sm-6">
                                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-sm-6">
                                    @Html.LabelFor(model => model.LengthInDays, "Length in Days", htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.LengthInDays, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.LengthInDays, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-sm-12">
                                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control col-sm-12 multi-line", @rows = 5 } })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-offset-2 col-md-10 margin-top-10px">
                                    <input id="btnSubmit" type="submit" value="Submit" class="btn btn-sm btn-primary" />
                                </div>
                            </form>
                        }
                    </div>
                </div>
                <div class="row margin-top-10px">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Add Week" class="btn btn-sm btn-primary" />
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        Week
                                    </th>
                                    <th>
                                        Workout Days
                                    </th>
                                    <th>
                                        Edit
                                    </th>
                                    <th>
                                        Delete
                                    </th>
                                </tr>
                                <tr>
                                    <td>
                                        1
                                    </td>
                                    <td>
                                        3
                                    </td>
                                    <td>
                                        <a href="#">Edit</a>
                                    </td>
                                    <td>
                                        <a href="#">Delete</a>
                                    </td>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
