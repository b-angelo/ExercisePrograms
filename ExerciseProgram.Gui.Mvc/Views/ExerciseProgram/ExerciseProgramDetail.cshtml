@model ExerciseProgram.Models.ViewModels.ProgramViewModel

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

@{
    if (ViewBag.ProgramCreated == "Created")
    {
        <div id="divSuccess" class="container">
            <div class="row margin-top-20px">
                <div class="col-sm-12">
                    <div class="alert alert-success" role="alert">
                        New Program Created
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
}

<div class="container">
    <div id="divAddExercise" class="margin-top-20px container border background-white-smoke">
        <div class="row margin-top-20px margin-bottom-20px">
            <div class="col">
                <h4>@Model.Name Program</h4>
                <hr />
            </div>
        </div>
        <div class="row margin-top-20px margin-bottom-20px">
            <div class="col">
                <b>Name:</b> @Model.Name <br /><br />
                <b>Exercises:</b> @Model.Exercises.Count() <br /><br />
                <b>Start: </b> @Model.StartDate.ToShortDateString() <br /><br />
                @{ 
                    var endDate = Model.EndDate.Value.ToShortDateString() == "12/31/9999" ? "" : Model.EndDate.Value.ToShortDateString();
                }
                <b>End: </b>  @endDate
            </div>
        </div>
        <div class="row margin-bottom-20px">
            <div class="col">
                <hr />
                <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                    <div class="btn-group mr-2" role="group" aria-label="First group">
                        <button id="btnUpdateProgram" class="btn btn-sm btn-primary btn-toolbar-width">Update</button>
                    </div>
                    <div class="btn-group mr-2" role="group" aria-label="First group">
                        <button id="btnMarkComplete" class="btn btn-secondary btn-sm btn-toolbar-width">Finish</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div id="divExerciseGrid" class="margin-top-20px container border background-white-smoke">
        <div class="row margin-top-20px margin-bottom-20px">
            <div class="col">
                <h5>@Model.Name Exercises</h5>
            </div>
        </div>
        <div class="row margin-top-20px margin-bottom-20px">
            <div class="col">
                <table class="table table-hover table-responsive-sm">
                    <thead class="thead-light table">
                        <tr>
                            <th colspan="1">
                                Name
                            </th>
                            <th colspan="1">
                                Set
                            </th>
                            <th colspan="1">
                                Reps
                            </th>
                            <th colspan="1">
                                Weight
                            </th>
                        </tr>
                        @foreach (var exercise in Model.Exercises)
                        {
                            for (var set = 1; set <= exercise.Sets; set++)
                            {
                        <tr>
                            <td>
                                @{
                                    if (set == 1)
                                    {
                                        <b>@exercise.Exercise.Description</b>
                                    }
                                }
                            </td>
                            <td>
                                @set
                            </td>
                            <td>
                                @exercise.Reps
                            </td>
                            <td>
                                <input class="input-weight-used" type="number" />
                            </td>
                        </tr>
                            }
                        }
                    </thead>
                </table>
            </div>
        </div>
        <div class="row margin-bottom-20px">
            <div class="col">
                <hr />
                <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                    <div class="btn-group mr-2" role="group" aria-label="First group">
                        <button id="btnSaveExerciseGrid" class="btn btn-sm btn-primary btn-toolbar-width">Save Progress</button>
                    </div> 
                    <div class="btn-group mr-2" role="group" aria-label="First group">
                        <a id="btnAddExercise" class="btn btn-sm btn-secondary btn-toolbar-width" href="~/Exercise/Exercise">Add Exercise</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

