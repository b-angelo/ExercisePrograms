@model ExerciseProgram.Models.ViewModels.ProgramViewModel

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

@{
    if (ViewBag.ProgramCreated == "Created")
    {
        <div id="divSuccess" class="container">
            <div class="row margin-top-20px">
                <div class="col-sm-12">
                    <div class="alert alert-success" role="alert">
                        New Program Created
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
}

<div class="container">
    <div id="divExerciseGrid" class="margin-top-20px container border background-white-smoke">
        <div class="row margin-top-20px margin-bottom-20px">
            <div class="col">
                <h4>Workout for @DateTime.Today.ToShortDateString()</h4>
            </div>
        </div>
        <div class="row margin-top-20px margin-bottom-20px">
            <div class="col">
                <table class="table table-hover table-responsive-sm">
                    <thead class="thead-light table">
                        <tr>
                            <th colspan="1">
                                Name
                            </th>
                            <th colspan="1">
                                Set
                            </th>
                            <th colspan="1">
                                Reps
                            </th>
                            <th colspan="1">
                                Weight
                            </th>
                        </tr>
                        @foreach (var exercise in Model.Exercises)
                        {
                            for (var set = 1; set <= exercise.Sets; set++)
                            {
                        <tr>
                            @if (set == 1)
                            {
                            <td colspan="4">
                                <b>@exercise.Exercise.Description</b>
                            </td>
                            }
                        </tr>
                        <tr id="@exercise.Id" class="program-name">
                            <td>
                                <button class="btn btn-sm btn-outline-success btn-save-exercise float-right">Save</button>
                            </td>   
                            <td>
                                @set
                            </td>
                            <td class="blah">
                                <input class="input-weight-used form-control-sm input-changed exercise-set" type="number" />
                            </td>
                            <td class="td-reps-duration">
                                <input class="input-weight-used form-control-sm input-changed exercise-reps-duration" type="number" />
                            </td>
                        </tr>
                            }
                        }
                    </thead>
                </table>
            </div>
        </div>
        <div class="row margin-bottom-20px">
            <div class="col">
                <hr />
                <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                    <div class="btn-group mr-1" role="group" aria-label="First group">
                        <button id="btnAddExercise" class="btn btn-sm btn-outline-primary btn-toolbar-width">Add Exercise</button>
                    </div>
                    <div class="btn-group mr-1" role="group" aria-label="First group">
                        <button id="btnMarkComplete" class="btn btn-sm btn-outline-secondary btn-toolbar-width">Finish</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<input hidden="hidden" value="@Model.Id" id="txtHiddenProgramId" />
<script>
    $(document).ready(function () {

        $(".btn-save-exercise").hide();

        $("#btnAddExercise").click(function () {

            var programId = $("#txtHiddenProgramId").val();
            
            $(location).attr('href', '/Exercise/Exercise/' + programId);
        });

        $(".input-changed").change(function () {

            var exerciseSet = $(this).closest(".program-name").find(".exercise-set").val();
            var exerciseRepsDuration = $(this).closest(".program-name").find(".exercise-reps-duration").val();

            if (exerciseSet > 0 && exerciseRepsDuration > 0) {
                //$(this).closest(".program-name").addClass("input-pending-save");
                $(this).closest(".program-name").find(".btn-save-exercise").show();
            }
            else {
                //$(this).closest(".program-name").removeClass("input-pending-save");
                $(this).closest(".program-name").find(".btn-save-exercise").hide();
            }
            
           
            //$(location).attr('href', '/Exercise/Exercise/' + programId);
        });

        $(".btn-save-exercise").click(function () {

            var programId = $("#txtHiddenProgramId").val();
            var exerciseId = $(this).closest(".program-name").attr("id");
            var exerciseSet = $(this).closest(".program-name").find(".exercise-set").val();
            var exerciseRepsDuration = $(this).closest(".program-name").find(".exercise-reps-duration").val();

            alert(programId);

            alert(exerciseId);

            alert(exerciseSet);

            alert(exerciseRepsDuration);
        });
    });
</script>