@model IEnumerable<ExerciseProgram.Models.ViewModels.ProgramViewModel>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<div class="container">
    <div id="divRecordWorkout" class="margin-top-20px container border background-white-smoke">
        <div class="row margin-top-20px margin-bottom-20px">
            <div class="col">
                <h4>Workout History</h4>
                <hr />
            </div>
        </div>
        <div class="row margin-top-20px margin-bottom-20px">
            <div class="col">
                <table id="tblExerciseSummary" class="table table-hover table-sm">
                    <thead class="thead-light table">
                        <tr>
                            <th>
                                Date
                            </th>
                            <th colspan="3">
                                Name
                            </th>
                            <th colspan="1">
                                Completed   
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var program in Model.OrderByDescending(x => x.StartDate))
                        {
                            <tr id="@program.Id" class="progam-id">
                                <td>
                                    @program.StartDate.ToShortDateString()
                                </td>
                                <td colspan="3">
                                    @program.Name
                                </td>                                
                                <td colspan="1">
                                    @{
                                        var completed = program.Complete ? "Yes" : string.Empty;
                                    }
                                    @completed
                                </td>                                
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
            <hr />
            <div class="row margin-top-20px margin-bottom-20px">
                <div class="col">
                    @* <a id="btnStartNewWorkout" class="btn btn-primary btn-sm" href="~/ExerciseProgram/CreateExerciseProgram">Start New Workout</a>*@
                </div>
            </div>
        </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {

            $(".progam-id").click(function () {

                var programId = $(this).attr("id");

                $(location).attr('href', '/ExerciseProgram/ExerciseProgramDetail/' + programId);
            });
        });
    </script>
