@model ExerciseProgram.Models.ViewModels.UserProfileViewModel

@{
    ViewBag.Title = "";
}

<div class="col-md-12 jumbotron row">
    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-md-4">
                @Html.Label("DobTxt", "Date of Birth")
                <input type="text" readonly id="DobTxt" value=@Model.DateOfBirth.ToShortDateString() class="form-control" />
            </div>
            <div class="col-md-4">
                @Html.Label("DateJoinedTxt", "Member Since")
                <input type="text" readonly id="DateJoinedTxt" value=@Model.DateJoined.ToShortDateString() class="form-control" />
            </div>
            <div class="col-md-4">
                @Html.Label("EmailTxt", "Email Address")
                @Html.EditorFor(g => g.EmailAddress, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                @Html.Label("HeightTxt", "Height (In Inches)")
                @Html.EditorFor(g => g.Height, new { htmlAttributes = new { @class = "form-control" } })
             </div>
            <div class="col-md-4">
                @Html.Label("WeightTxt", "Weight")
                @Html.EditorFor(g => g.Weight, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-4">
                @Html.Label("BmiTxt", "BMI")
                <input type="text" readonly id="BmiTxt" value=@Model.BodyMassIndex class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <input type="submit" name="response" value="Update Profile" formaction=@Url.Action("UpdateProfile",  new { weight = Model.Weight, height = Model.Height, emailAddress = Model.EmailAddress }) formmethod="post" class="btn btn-primary" />
            </div>
        </div>
    }
</div>
<div class="jumbotron col-md-12 row">
    <div class="container">
        @using (Html.BeginForm())
        {
            <table class="table table-hover">
                <tr>
                    <th>
                        Date
                    </th>
                    <th>
                        Weight
                    </th>
                    <th>
                        BMI
                    </th>
                    <th>
                        Category
                    </th>
                </tr>
                <tbody>
                    @foreach (var item in Model.WeightHistory)
                    {
                        <tr>
                            <td>
                                <input type="text" readonly value=@item.CreateDate.ToShortDateString() class="form-control" />
                            </td>
                            <td>
                                <input type="text" readonly value=@item.WeightInPounds class="form-control" />
                            </td>
                            <td>
                                <input type="text" readonly value=@item.Bmi class="form-control" />
                            </td>
                            <td>
                                <input type="text" readonly value=@item.BmiCategory class="form-control" />
                            </td>
                            <td>
                                <input type="submit" name="btnDeleteWeight" value="Delete" formaction=@Url.Action("DeleteUserWeightEntry",  new { id = item.Id }) formmethod="post" class="btn btn-danger" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div>
                <ul class="pager">
                    <li><a href="#">|&laquo;</a></li>
                    <li><a href="#">&laquo;</a></li>
                    <li><a href="#">&raquo;</a></li>
                    <li><a href="#">&raquo;|</a></li>
                </ul>
            </div>
        }
    </div>
</div>
