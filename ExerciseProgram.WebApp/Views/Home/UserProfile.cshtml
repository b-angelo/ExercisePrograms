
@{
    ViewBag.Title = "Profile";
}

<div class="col-md-6">
    <h2>{User Name's} Profile</h2>
    <div class="row">
        <div class="col-md-3">
            Date of Birth
        </div>
        <div class="col-md-3">
            <input type="text" name="txtDateOfBirth" value="">
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">
            Height
        </div>
        <div class="col-md-3">
            <input type="text" name="txtHeight" value="">
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">
            Weight
        </div>
        <div class="col-md-3">
            <input type="text" name="txtWeight" value="">
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301866">Update Profile</a>
        </div>
    </div>
</div>
<div class="col-md-6">
    <h2>Historical Weight</h2>
    <div class="container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Weight (lbs)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>5/23/2018</td>
                    <td>228</td>
                </tr>
                <tr>
                    <td>5/01/2018</td>
                    <td>226</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>