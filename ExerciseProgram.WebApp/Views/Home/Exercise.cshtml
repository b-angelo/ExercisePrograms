@model IEnumerable<ExerciseProgram.Models.ViewModels.ExerciseViewModel>

@{
    ViewBag.Title = "Exercises";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<p>
    <div class="col-md-12">
        <div class="col-md-3">
            <b>Exercise</b>
        </div>
        <div class="col-md-3">
            <b>Exercise Category</b>
        </div>
        <div class="col-md-3">
            <b>Muscle Group</b>
        </div>
        <div class="col-md-3"></div>
    </div>
    <br />
    <div class="col-md-12">
        <div class="col-md-3">
            <input type="text" name="Exercise" value="">
        </div>
        <div class="col-md-3">
            <input type="text" name="ExerciseCategory" value="">
        </div>
        <div class="col-md-3">
            <input type="text" name="MuscleGrouop" value="">
        </div>
        <div class="col-md-3">
            <button id="btnAddNewExercise">Add New Exercise</button>
        </div>
    </div>
    <br />
</p>
<table class="table">
    <tr>
        <th>
            Exercise
        </th>
        <th>
            Exercise Category
        </th>
        <th>
            Muscle Group
        </th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ExerciseDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExerciseTypeNickName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MuscleGroupNickName)
        </td>
        <td>@*  *@
            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
        </td>
    </tr>
    }

</table>
