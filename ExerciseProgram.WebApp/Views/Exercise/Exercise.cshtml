@model IEnumerable<ExerciseProgram.Models.ViewModels.ExerciseViewModel>

@{
    ViewBag.Title = "Create New Workout";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#btnAddNewExercise").click(function () {
            alert("test");
        });

        $("#btnAddNewExerciseProgram").click(function () {
            alert("test program");
        });

        $("#ExerciseSelect").prop("disabled", true);

        $("#MuscleGroupSelect").change(function () {
            $.ajax({
                url: '/Exercise/Exercise/bicep',
                dataType: "json",
                type: "GET",
                contentType: 'application/x-www-form-urlencoded; charset=utf-8',
                data: { muscleGroupName: 'bicep' },
                async: true,
                processData: true,
                cache: false
            });
            $("#ExerciseSelect").prop("disabled", false);
        });
        $("#btnLoadNewProgram").click(function () {
            $("#mdlNewProgram").modal();
        });
        $("#btnBasicProgramInformation").click(function () {
            $("#mdlNewProgram").hide;
            $("#mdlNewExerciseForProgram").modal();
        });
    });
</script>
<div class="container">
    <div class="jumbotron row">
        <button type="button" class="btn btn-primary" id="btnLoadNewProgram">Create New Program</button>
    </div>
    <div class="modal" id="mdlNewProgram" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4>Create New Program</h4>
                </div>
                <div class="modal-body" style="padding:40px 50px;">
                    @{Html.RenderPartial("_NewExerciseProgram", Model);}
                </div>
            </div>

        </div>
    </div>
</div>
<div class="container">
    <div class="modal fade" id="mdlNewExerciseForProgram" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4>Add Exercise</h4>
                </div>
                <div class="modal-body" style="padding:40px 50px;">
                    @{Html.RenderPartial("_NewExerciseForProgram", Model);}
                </div>
            </div>
        </div>
    </div>
</div>

